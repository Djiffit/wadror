<h3>Most active users</h3>
<table class="table table-hover">
  <thead>
    <tr>
      <td>Name</td>
      <th>Favorite beer</th>
      <th>Preferred style</th>
      <th>Favorite brewery</th>
      <th>Ratings</th>
    </tr>
  </thead>
  <% @top_raters.each do |top| %>
      <% if not top.nil? %>
      <tr>
        <td><%= top.username %></td>
        <td><%= top.favorite_beer %></td>
        <td><%= top.favorite_style.name %></td>
        <td><%= top.favorite_brewery.name %></td>
        <td><%= top.ratings.count %></td>
      </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
<h3>Recent ratings: </h3>
<list>
<% @recent.each do |rec| %>
    <div class="col-sm-6">
      <ul class="list-group-item" align="center"><%= rec.to_s %> from <%= link_to rec.user.username, rec.user %></ul>
    </div>
    <% end %>
</list>
<br><br><br> <br>
<%= link_to 'Rate a beer', new_rating_path %>


