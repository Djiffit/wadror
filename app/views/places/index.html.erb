
<h3>Search for a city: </h3>
<%= form_tag places_path do %>
    <div class="row">
      <div class="col-lg-6">
        <div class="input-group">
          <span class="input-group-btn">
            <button class="btn btn-default" type="submit">Search</button>
          </span>
          <input type="text" class="form-control" id="city" placeholder="Search for..." <%=text_field_tag :city, params[:city] %>
        </div>
      </div>
    </div>
<% end %>
<br>
<% if @places %>
    <table class="table table-hover table-bordered">
      <thead>
      <% Place.rendered_fields.each do |f| %>
          <td><%=f %></td>
      <% end %>
      </thead>
      <% @places.each do |place| %>
          <tr>
            <% Place.rendered_fields.each do |f| id = place.send(:id)%>
                <td><%= link_to place.send(f), place_path(id: id.to_s), params[:place] %></td>
            <% end %>
          </tr>
      <% end %>
    </table>
<% end %>