<p id="notice"><%= notice %></p>

<h2>
  <strong>Name:</strong>
  <%= @brewery.name %>
</h2>

<p><i>
  <strong>Established in:</strong>
  <%= @brewery.year %>
</i></p>
<p>
  Number of beers: <%= @brewery.beers.count %>
</p>
<% @brewery.beers.to_a %>

<table>
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Type
      </th>
    </tr>
  </thead>
  <tbody>
  <% @brewery.beers.each do |beer| %>
      <tr>
        <td align="center"><%= link_to beer.name, beer %></td>
        <td align="center"><%= beer.style %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_brewery_path(@brewery) %> |
<%= link_to 'Back', breweries_path %>
