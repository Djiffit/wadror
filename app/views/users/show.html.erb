<h2>
  <%= @user.username %>
</h2>
<%if @user.banned %>
    <span class="label label-danger">banned</span><br>
    <%= link_to "unban", toggle_ban_user_url(@user), method: :post, class:"btn btn-success btn-xs" if current_user.admin %>
<%else%>
    <span class="label label-success">not banned</span><br>
    <%= link_to "ban", toggle_ban_user_url(@user), method: :post, class:"btn btn-danger btn-xs" if current_user.admin %>
<%end%>
<p>
  Has made <%= pluralize(@user.ratings.count, 'rating') %>
  <% if @user.ratings.count > 0 %><br>
      Rating average: <%= @user.average_rating %><br>
      Favorite style: <%= @user.favorite_style.name %><br>
      Favorite brewery: <%= @user.favorite_brewery.name %>
  <% end %>
  <br>

</p>
<p>Is part of <%= pluralize(@user.beer_clubs.count, 'beer club')%></p>
<% if @user.beer_clubs.count > 0 %>
    <% @user.beer_clubs.each do |b| %>
        <td>
          <%= link_to b.name, beer_club_path(b.id) %>
        </td>
    <%end%>
<%end%>
<% if @user.ratings.count > 0 %>
    <table class="table table-hover table-bordered">
      <thead>
      <tr>
        <th class="col-md-4">Beer:</th>
        <th class="col-md-1">Rating:</th>
      </tr>
      </thead>
      <tbody>
      <% @user.ratings.each do |r| %>
          <tr>
            <td><%= r.beer %></td>
            <td><%= r.score %> </td>
            <%if @user == current_user %>
                <td><%= link_to 'delete', rating_path(r.id), method: :delete, data: {confirm: 'Are you sure you wish to delete this rating?'} %></td>
            <%end%>
          </tr>
      <% end %>
      </tbody>
    </table>
<%end%>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', users_path %>
