<p id="notice"><%= notice %></p>

<h1>Listing Beer Clubs</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Founded</th>
    </tr>
  </thead>

  <tbody>
    <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><%= beer_club.name %></td>
        <td><%= beer_club.founded %></td>
        <td align="center"><button class="btn btn-primary btn-xs"><%= link_to 'Show', beer_club  %></button></td>
        <td align="center"><button class="btn btn-warning btn-xs"><%= link_to 'Edit', edit_beer_club_path(beer_club) if current_user %></button></td>
        <td align="center"><button class="btn btn-danger btn-xs"><%= link_to 'Destroy', beer_club, method: :delete, data: { confirm: 'Are you sure?' } if current_user %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

