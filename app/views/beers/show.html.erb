<p id="notice"><%= notice %></p>

<h2>
  <strong>Name:</strong>
  <%= @beer.name %>
</h2>

<p>
  <strong>Style:</strong>
  <%= @beer.style.name %>
</p>

<p>
  <strong>Brewery:</strong>
  <% brewery = Brewery.find @beer.brewery_id %>
  <%= link_to brewery.name, brewery %>
</p>

<p>
  <% if @beer.ratings.empty? %>
      Nobody has rated this beer yet!
  <% else %>
      Has <%= pluralize(@beer.ratings.count, 'rating') %>, average rating: <%= @beer.average_rating %>
  <% end %>
</p>

<% if current_user %>

    <h4>give a rating:</h4>

    <%= form_for(@rating) do |f| %>
        <%= f.hidden_field :beer_id %>
        score: <%= f.number_field :score %>
        <%= f.submit %>
    <% end %>

    <%= link_to 'Edit', edit_beer_path(@beer) %>

<% end %>
<%= link_to 'Edit', edit_beer_path(@beer) %> |
<%= link_to 'Back', beers_path %>
