<h2>New Membership</h2>
<% if @beer_clubs.count > 0 %>
<%= form_for(@membership) do |f| %>
        <%= f.select :beer_club_id, options_from_collection_for_select(@beer_clubs, :id, :to_s) %>
        <%= f.submit %>
    <% end %>
        <% else %>
        <h1>You already belong to every Beer Club known to man!</h1>


<%end%>
